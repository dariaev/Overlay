
<android.support.v4.widget.DrawerLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:id="@+id/drawer_layout"
    android:background="@color/white"
    android:layout_width="match_parent"
android:layout_height="match_parent">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
        android:orientation="vertical">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/hamburger"
            android:id="@+id/hamburger"
            android:onClick="openDrawer"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="wrap_content"
                android:background="@color/material_blue_grey_900"
                android:layout_height="300dp"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:orientation="vertical"
                android:id="@+id/linearlay"
 tools:context=".MainActivity">


                <SurfaceView
                    android:id="@+id/surfaceView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>

            </LinearLayout>

            <ImageView
                android:layout_width="100dp"
                android:layout_height="200dp"
                android:src="@drawable/captureicon"
                android:layout_below="@id/linearlay"
                android:background="@color/accent_material_dark"
                android:layout_centerInParent="true"
                android:gravity="bottom|center_horizontal"
                android:onClick="captureImage"/>
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/NavLinearLayout"
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_gravity="left"
        android:orientation="vertical"
        >
        <LinearLayout
            android:id="@+id/PersonalProfile"
            android:layout_width="300dp"
            android:layout_height="150dp"
            android:layout_gravity="left"
            android:orientation="horizontal">
            <ImageView
                android:src="@drawable/angie_head_circle"
                android:layout_width="150dp"
                android:layout_height="150dp"
                />
            <LinearLayout
                android:id="@+id/PersonalText"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="left"
                android:orientation="vertical">
            <TextView
                android:layout_width="300dp"
                android:layout_height="30dp"
                android:text="sunangel"
                />
            <TextView
                android:layout_width="300dp"
                android:layout_height="30dp"
                android:text="Your points"
                />
            <TextView
                android:layout_width="300dp"
                android:layout_height="30dp"
                android:text="1,000"
                />
            </LinearLayout>
        </LinearLayout>
        <Button
            android:id="@+id/Social"
            android:layout_width="300dp"
            android:layout_height="100dp"
            android:text="Friends and stuff"
            />
        <ListView
            android:id="@+id/navList"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_gravity="left|start"
            android:background="#ffeeeeee"/>
    </LinearLayout>

</android.support.v4.widget.DrawerLayout>